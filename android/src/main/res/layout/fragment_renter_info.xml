<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/scrollView">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:id="@+id/linearLayout2">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/renter_info"
                    android:id="@+id/renter_info"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/primary_dark"
                    android:layout_marginBottom="10dp"
                    />

            <com.weproov.app.ui.views.FloatLabelLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:floatLabelTextAppearance="@style/TextAppearance.WeProov.FloatLabel">

                <EditText
                        android:id="@+id/edit_firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/renter_firstname"
                        android:singleLine="true"
                        android:inputType="textPersonName"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@+id/edit_lastname"/>
            </com.weproov.app.ui.views.FloatLabelLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingBottom="4dp"
                    android:visibility="invisible"
                    android:textColor="@color/material_red_700"
                    android:text="@string/error_firstname"
                    android:id="@+id/edit_firstname_error"/>

            <com.weproov.app.ui.views.FloatLabelLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:floatLabelTextAppearance="@style/TextAppearance.WeProov.FloatLabel">

                <EditText
                        android:id="@+id/edit_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/renter_lastname"
                        android:singleLine="true"
                        android:inputType="textPersonName"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@+id/edit_email"/>

            </com.weproov.app.ui.views.FloatLabelLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingBottom="4dp"
                    android:visibility="invisible"
                    android:textColor="@color/material_red_700"
                    android:text="@string/error_lastname"
                    android:id="@+id/edit_lastname_error"/>

            <com.weproov.app.ui.views.FloatLabelLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:floatLabelTextAppearance="@style/TextAppearance.WeProov.FloatLabel">

                <EditText
                        android:id="@+id/edit_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/renter_email"
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@+id/edit_company"/>

            </com.weproov.app.ui.views.FloatLabelLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingBottom="4dp"
                    android:visibility="invisible"
                    android:textColor="@color/material_red_700"
                    android:text="@string/error_email"
                    android:id="@+id/edit_email_error"/>

            <com.weproov.app.ui.views.FloatLabelLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:floatLabelTextAppearance="@style/TextAppearance.WeProov.FloatLabel">

                <EditText
                        android:id="@+id/edit_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/renter_company"
                        android:singleLine="true"
                        android:inputType="textNoSuggestions"
                        android:imeOptions="actionDone"/>

            </com.weproov.app.ui.views.FloatLabelLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:visibility="invisible"
                    android:textColor="@color/material_red_700"
                    android:text="@string/error_company"
                    android:id="@+id/edit_password_error"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/renter_document_info"
                    android:id="@+id/car_info"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/primary_dark"
                    android:layout_marginBottom="10dp"
                    />

            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/horizontalScrollView">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="fitCenter"
                            android:layout_margin="0dp"
                            android:padding="0dp"
                            android:src="@drawable/ic_action_about"
                            android:id="@+id/add_document"/>
                </LinearLayout>

            </HorizontalScrollView>


            <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>

    <include
            layout="@layout/footer_button_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>