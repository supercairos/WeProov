<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/content_fragment_root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.weproov.app.ui.views.FourThirdView
            android:id="@+id/picture_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:contentDescription="@android:string/untitled"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/comment_image_view"/>

        <com.weproov.app.ui.views.FingerPaintView
                android:id="@+id/comment_finger_paint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </com.weproov.app.ui.views.FourThirdView>

</LinearLayout>
