<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/content_fragment_root_view"
              android:orientation="vertical"
              tools:context="com.weproov.app.ui.fragments.dialogs.BugReportDialogFragment">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textAllCaps="true"
            android:text="Feedback title"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/edit_bug_title"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textAllCaps="true"
            android:text="Feedback content"
            android:id="@+id/textView"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="6"
            android:id="@+id/edit_bug_content"/>

</LinearLayout>
