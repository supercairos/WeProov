<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="16dp"
            android:id="@+id/document_picture"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/document_car_info"
                android:text="Citroen Picasso (AA-BBB-CC)"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/document_client_info"
                android:text="Romain Caire (WeProov)"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:id="@+id/document_date"
                android:text="Monday 4th of July 4pm"/>
    </LinearLayout>
</LinearLayout>